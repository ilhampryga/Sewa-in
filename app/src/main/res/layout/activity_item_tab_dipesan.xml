<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_item"
        android:paddingBottom="10dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toko Ilham"
            android:textAlignment="textStart"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/readmed"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:src="@drawable/item2"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_search"
                android:clipToOutline="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/description"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sepatu Gunung"
                    android:textAlignment="textStart"
                    android:textSize="20sp"
                    android:fontFamily="@font/readreg"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Rp. 30.000"
                    android:textAlignment="textEnd"
                    android:textSize="16sp"
                    android:fontFamily="@font/readreg"/>

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Total Sewa 2 Hari : Rp. 60.000"
                    android:textAlignment="textEnd"
                    android:textSize="16sp"
                    android:fontFamily="@font/readreg"/>
            </LinearLayout>
        </LinearLayout>

<!--        oleh toko-->
        <Button
            android:id="@+id/btnKonfirmasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/white"
            android:text="Konfirmasi Pesanan"
            android:fontFamily="@font/readreg"
            android:layout_marginTop="15dp"
            android:layout_gravity="right"
            android:layout_marginEnd="10dp"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
